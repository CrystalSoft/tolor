<set
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:interpolator="@android:anim/accelerate_interpolator">
	<rotate
		android:interpolator="@android:anim/linear_interpolator"
		android:fromDegrees="-5"
		android:toDegrees="5"
		android:duration="50"
		android:pivotX="50%"
